<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/chennai" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="36sp"
            android:text="0"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:id="@+id/ab"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="six"
            android:padding="12dp"
            android:text="6"
           />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="four"
            android:padding="12dp"
            android:text="4" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="three"
            android:padding="12dp"
            android:text="3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="two"
            android:padding="12dp"
            android:text="2" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="one"
            android:padding="12dp"
            android:text="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="wide"
            android:padding="12dp"
            android:text="wide/no-ball"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/mumb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="36sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:id="@+id/text2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:onClick="six1"
            android:text="6"
           />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="four1"
            android:padding="12dp"

            android:text="4" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="three1"
            android:padding="12dp"
            android:text="3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="two1"
            android:padding="12dp"
            android:text="2" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="one1"
            android:padding="12dp"
            android:text="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="wide1"
            android:padding="12dp"
            android:text="wide/no-ball"/>



    </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Reset"
        android:onClick="reset"
        android:padding="8dp"/>


</LinearLayout>